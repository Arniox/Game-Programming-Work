#include "Explosion.h"

Explosion::Explosion()
:dead(true)
,timeCount(0)
{
}
Explosion::~Explosion()
{
}

void Explosion::Process(float deltaTime, bool& explode)
{
	if (!dead) {
		timeCount++;
		if (timeCount >= 60) {
			dead = true;
			timeCount = 0;
			explode = false;
		}
	}

	Entity::Process(deltaTime);
}

void Explosion::SetCenter(float x, float y)
{
	m_x = x;
	m_y = y;
}
